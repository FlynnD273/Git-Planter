<Window x:Class="GitPlanter.CommandDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GitPlanter"
        mc:Ignorable="d"
        Title="Running command..." Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="outputTextBlock" Loaded="outputTextBlock_Loaded"/>
        <Button Grid.Row="1" x:Name="confirmButton" Margin="5" Padding="10,5" Content="OK" HorizontalAlignment="Center" IsDefault="True" IsEnabled="False" Click="confirmButton_Click"/>
    </Grid>
</Window>
